{
  "name": "gogestiaapi",
  "version": "1.0.0",
  "description": "API backend para el formulario de contacto de GoGestia. Desarrollada con Node.js, Express y Nodemailer para gestionar mensajes de contacto de forma segura y eficiente.",
  "main": "src/server.js",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "test": "node test-api.js",
    "test:blog": "node test-blog-api.js",
    "test:all": "node test-api.js && node test-blog-api.js",
    "test:manual": "echo \"Para pruebas manuales, ejecuta 'npm run dev' y luego 'npm test' en otra terminal\"",
    "predeploy": "node pre-deploy-check.js",
    "deploy:check": "npm run predeploy && npm run lint",
    "db:init": "node scripts/init-database.js",
    "db:setup": "npm run db:init",
    "db:add-sample": "node scripts/add-sample-data.js",
    "setup": "npm install && npm run db:init"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlexAlvarezAlmendros/GoGestiaAPI.git"
  },
  "keywords": [
    "gogestia",
    "api",
    "contact-form",
    "nodejs",
    "express",
    "nodemailer",
    "email",
    "backend",
    "rest-api"
  ],
  "author": "Alex Alvarez <alex@gogestia.com> (https://gogestia.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AlexAlvarezAlmendros/GoGestiaAPI/issues"
  },
  "homepage": "https://github.com/AlexAlvarezAlmendros/GoGestiaAPI#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "form-data": "^4.0.4",
    "helmet": "^8.1.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "sequelize": "^6.37.7",
    "sharp": "^0.34.3",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "axios": "^1.11.0",
    "eslint": "^9.33.0",
    "nodemon": "^3.1.10"
  }
}
